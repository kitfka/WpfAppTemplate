{
  "$schema": "http://json.schemastore.org/template",
  "author": "Kitfka",
  "classifications": [ "WPF" ],
  "name": "My WPF template",
  "identity": "Kitfka.WPF.CSharp",
  "groupIdentity": "Kitfka.WPF",
  "shortName": "WPF-FEY",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "WpfAppTemplate",
  "preferNameDirectory": true,
  "symbols": {
    "includecore": {
      "type": "parameter",
      "datatype": "bool",
      "description": "This is needed for my mvvm sutup. This contains the Models and ViewModels that are plateform independent!",
      "defaultValue": "true"
    },

    "tui": {
      "type": "parameter",
      "datatype": "bool",
      "description": "A Text ui example. It makes use of Terminal.Gui. There is no real reason to use this.",
      "defaultValue": "false"
    },
    "installer": {
      "type": "parameter",
      "datatype": "bool",
      "description": "A decent installer.",
      "defaultValue": "false"
    },
    "maui": {
      "type": "parameter",
      "datatype": "bool",
      "description": "Add .net maui support.",
      "defaultValue": "false"
    }
  },
  "sources": [
    {
      "modifiers": [
        {
          "condition": "(!includecore)",
          "exclude": [ "WpfAppTemplate.Core/**/*" ]
        },
        {
          "condition": "(!tui)",
          "exclude": [ "WpfAppTemplate.TUI/**/*" ]
        },
        {
          "condition": "(!installer)",
          "exclude": [ "WpfAppTemplate.Setup/**/*" ]
        },
        {
          "condition": "(!maui)",
          "exclude": [ "WpfAppTemplate.Maui/**/*" ]
        },
        {
          "exclude": [ ".git/**/*", ".vs/**/*" ]
        }
      ]
    }
  ]
}